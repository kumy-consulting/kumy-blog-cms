{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "title_en",
      "required": true
    },
    "title_fr": {
      "type": "string",
      "required": true
    },
    "title_en": {
      "type": "string",
      "required": true
    },
    "excerpt_fr": {
      "type": "text"
    },
    "excerpt_en": {
      "type": "text"
    },
    "content_fr": {
      "type": "richtext"
    },
    "content_en": {
      "type": "richtext"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "youtubeVideoId": {
      "type": "string"
    },
    "publishedAt": {
      "type": "date"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "blog_posts"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "blog_posts"
    }
  }
}
